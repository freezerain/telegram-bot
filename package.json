{
  "name": "alfred-telegram",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "dev:remote": "wrangler dev --remote",
		"dev:cron": "wrangler dev --test-scheduled",
		"dev:local": "wrangler deploy --dry-run --outdir out",
    "test": "mocha ./test --recursive",
    "test:cron": "curl \"http://localhost:8787/__scheduled?cron=*+*+*+*+*\"\n\n",
    "tail": "wrangler tail --format=pretty",
    "updateai": "npm update @cloudflare/ai --save-dev"
  },
  "imports": {
    "#src/*.mjs": "./src/*.mjs",
    "#src/*.js": "./src/*.js",
    "#main": "./src/main.mjs",
    "#res": "./src/res.mjs"
  },
  "devDependencies": {
		"wrangler": "^3.19.0",
		"mocha": "^10.2.0",
		"sinon": "^17.0.1",
    "chai": "^4.3.10",
		"chai-as-promised": "^7.1.1"
  },
  "dependencies": {
    "@cloudflare/ai": "^1.0.38",
    "openai": "^4.20.1"
  }
}
